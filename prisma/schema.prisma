// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id  Int  @id @default(autoincrement())
  hex Int  @unique
  description String
}

model Block {
  id  Int  @id @default(1)
  blockNo String @unique @default("")
}

model Transfer {
  address String 
  topics String []
  data String
  blockNumber String
  transactionHash String
  transactionIndex String
  blockHash String
  logIndex String @unique
  removed Boolean
  blockDate DateTime? @db.Timestamptz(3)
  timestamp String? 
}

model Burn {
  address String 
  topics String []
  data String
  blockNumber String
  transactionHash String
  transactionIndex String
  blockHash String
  logIndex String @unique
  removed Boolean
  blockDate DateTime? @db.Timestamptz(3)
  timestamp String? 
}





